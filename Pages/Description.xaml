<UserControl x:Class="ProcessRecorder.Pages.Description"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="WELCOME TO MACROPATH!" Style="{StaticResource Heading2}" Margin="0,0,0,25" />
                <TextBlock Text="This app allows you to record your actions taken during every task you want and saves it to the macro file." Height="52" TextWrapping="Wrap" FontStretch="Expanded" TextAlignment="Center" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
