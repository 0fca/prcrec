<UserControl x:Class="ProcessRecorder.Pages.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <mui:ModernTab Layout="List" SelectedSource="/Pages/Description.xaml" Margin="0,21,0,0">
        <mui:ModernTab.Links>
                <mui:Link DisplayName="Welcome" Source="/Pages/Description.xaml" />
                <mui:Link DisplayName="Recorder View" Source="/Pages/RecordView.xaml" />
                <mui:Link DisplayName="About" Source="/Pages/About.xaml" />
            </mui:ModernTab.Links>
        </mui:ModernTab>
    </Grid>
</UserControl>
