<UserControl x:Class="ProcessRecorder.Pages.About"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="ABOUT" Style="{StaticResource Heading2}" Margin="0,0,0,25" />
                <TextBlock Text="MacroPath v1.1" Margin="0,0,0,10" HorizontalAlignment="Center" />
                <TextBlock TextWrapping="Wrap" Text="Author: Obsidiam" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                <TextBlock TextWrapping="Wrap" Cursor="Hand" Text="GitHub" HorizontalAlignment="Center" MouseDown="LinkTextBlockMouseDown"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
